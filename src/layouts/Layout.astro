---
type Props = {
  title: string;
};

const { title } = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Full stack developer based in Barcelona"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://github.com/edyespinal.png" />
    <meta property="og:title" content="Edy Espinal" />
    <meta
      property="og:description"
      content="Full stack developer based in Barcelona"
    />
    <meta property="og:image" content="https://github.com/edyespinal.png" />
  </head>
  <body class="relative h-screen">
    <slot />
  </body>
</html>
